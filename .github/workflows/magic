name: Hide Commit History

on:
  push:
    branches:
      - main

jobs:
  hide-history:
    runs-on: ubuntu-latest
    steps:
      - name: Hide commit history
        run: |
          git checkout --orphan new_branch
          git add -A
          git commit -am "Hide commit history"
          git branch -D main
          git branch -m main
          git push -f origin main
